extends base.pug

block content
    h4 Update Video
    form(method="POST",enctype="multipart/form-data")
        input(name="title",placeholder="Video Title",value=video.title)
        input(placeholder="Description", required, type="text", name="description", minlength=1,value=video.description)
        input(placeholder="Hashtag, separated by comma.", required, type="text", name="hashtags",value=video.hashtags.join())
        input(type="submit", value="Save")