extends base.pug

block content
    div 
        video#preview
        button#actionBtn Start Recording
    if errorMessage
        span=errorMessage 
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video
        input(type="file", accept="video/*", name="video", id="video", required)
        label(for="thumb") Thumbnail File
        input(type="file", accept="image/*", name="thumb", id="thumb", required)
        input(placeholder="Title", required, type="text", name="title", maxlength=60)
        input(placeholder="Description", required, type="text", name="description", minlength=1)
        input(placeholder="Hashtag, separated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")
block scripts 
    script(src="/static/js/recorder.js")